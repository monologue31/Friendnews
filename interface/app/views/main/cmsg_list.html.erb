<form action="/main/cmsg_list" method = "post" enctype = "multipart/form-data">
  <table border="1" cellpadding="4">
    <tr>
    <td> </td>
    <th width="100">Message-ID</th>
    <td>From</td>
    <td>Date</td>
    <td width="150">Type</td>
    </tr>
    <% @clist.each do |msg,val| -%>
    <tr>
      <td><%= check_box_tag msg, '1',true %></td>
      <th width="100"><%= link_to(msg,:controller => 'main',:action => 'article',:artnum => msg) %></th>
      <% val.split("!").each do |v|-%>
      <td width="150"><%= v %></td>
      <% end -%>
    </tr>
    <% end -%>
  </table>
  <p><input type = "submit" value = "apply"></p>
</form>
<%= @result %>
